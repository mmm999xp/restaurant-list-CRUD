<form class="needs-validation" action="/{{data._id}}/edit" method="post">
  {{!-- name required --}}
  <div class="mt-3 w-25 mx-auto">
    <label for="name" class="form-label">*Name :</label>
    <input type="text" class="form-control" id="name" aria-describedby="nameHelp" name="name" required value="{{data.name}}">
    <div id="nameHelp" class="form-text">請輸入餐廳名稱</div>
  </div>
  {{!-- name_en --}}
  <div class="mt-2 w-25 mx-auto">
    <label for="name_en" class="form-label">English Name :</label>
    <input type="text" class="form-control" id="name_en" aria-describedby="name_en_Help" name="name_en" value="{{data.name_en}}">
    <div id="name_en_Help" class="form-text">請輸入餐廳英文名稱</div>
  </div>
  {{!-- category required --}}
  <div class="mt-2 w-25 mx-auto">
    <label for="category" class="form-label">*category :</label>
    <input type="text" class="form-control" id="category" aria-describedby="categoryHelp" name="category" required value="{{data.category}}">
    <div id="categoryHelp" class="form-text">請輸入餐廳風格，如義式、美式等</div>
  </div>
  {{!-- image --}}
  <div class="mt-2 w-25 mx-auto">
    <label for="image" class="form-label">image :</label>
    <input type="text" class="form-control" id="image" aria-describedby="imageHelp" name="image" value="{{data.image}}">
    <div id="imageHelp" class="form-text">請輸入圖片鏈結</div>
  </div>
  {{!-- location required --}}
  <div class="mt-2 w-25 mx-auto">
    <label for="location" class="form-label">*location :</label>
    <input type="text" class="form-control" id="location" aria-describedby="locationHelp" name="location" required value="{{data.location}}">
    <div id="locationHelp" class="form-text">請輸入餐廳地址</div>
  </div>
  {{!-- phone --}}
  <div class="mt-2 w-25 mx-auto">
    <label for="phone" class="form-label">phone :</label>
    <input type="text" class="form-control" id="phone" aria-describedby="phoneHelp" name="phone" value="{{data.phone}}">
    <div id="phoneHelp" class="form-text">請輸入餐廳電話</div>
  </div>
  {{!-- google_map --}}
  <div class="mt-2 w-25 mx-auto">
    <label for="google_map" class="form-label">google map :</label>
    <input type="text" class="form-control" id="google_map" aria-describedby="google_map_Help" name="google_map" value="{{data.google_map}}">
    <div id="google_map_Help" class="form-text">請輸入餐廳google map 網址</div>
  </div>
  {{!-- rating --}}
  <div class="mt-2 w-25 mx-auto">
    <label for="rating" class="form-label">rating :</label>
    <input type="text" class="form-control" id="rating" aria-describedby="ratingHelp" name="rating" value="{{data.rating}}">
    <div id="ratingHelp" class="form-text">請輸入餐聽預設評分</div>
  </div>
  {{!-- description required --}}
  <div class="mt-2 w-25 mx-auto">
    <label for="description" class="form-label">*description :</label>
    <textarea class="form-control" id="description" name="description" rows="8" required>{{data.description}}</textarea>
    <div id="descriptionHelp" class="form-text">請輸入餐廳描述</div>
  </div>

  <button type="submit" class="btn btn-primary d-grid mt-3 col-3 mx-auto">儲存修改</button>


</form>
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
        <div class="create">
          <a href="/restaurants/new" >找不到網站嗎?點此新增!</a>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
{{!-- a標籤的id是由mongoDB自動賦予的，並非我們設定，因此要用._id --}}
        {{#each restaurants}}
       
          <div class="card mb-3 ">
            <a href="/restaurants/{{this._id}}" class="text-secondary">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            </a>
            <div class="footer mb-2 d-flex justify-content-end align-items-center">
              <a href="/restaurants/{{this._id}}/edit" class="mx-4">edit</a>
              <form action="/{{this._id}}/delete" method="post" id="delete-form">
                <button type="submit" class="btn btn-danger" id="delete" >Delete</button>
              </form>


            </div>
          </div>
        
        {{/each}}



      </div>
    </div>
  </div>
</div>

<script src="/javascripts/check.js"></script>